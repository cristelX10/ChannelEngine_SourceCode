@model ChannelEngineWebApp.Models.PatchModel

@{
    ViewData["Title"] = "PatchProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Set Stock for Product</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PatchProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MerchantProductNo" class="control-label"></label>
                <input asp-for="MerchantProductNo" class="form-control" />
                <span asp-validation-for="MerchantProductNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <script type="text/javascript">alert('@ViewBag.Message');</script>
}